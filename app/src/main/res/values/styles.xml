<resources>

    <style name="ActionBar.Solid.Reddist"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/orangered</item>
        <item name="android:background">@color/orangered</item>
    </style>

    <style name="ActionBarWidget" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="background">@color/orangered</item>
        <item name="android:background">@color/orangered</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/ActionBar.Solid.Reddist</item>
        <item name="actionBarWidgetTheme">@style/ActionBarWidget</item>

        <item name="android:actionBarStyle">@style/ActionBar.Solid.Reddist</item>
        <item name="android:actionBarWidgetTheme">@style/ActionBarWidget</item>
    </style>
</resources>
